<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/my_Ecommerce_App.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;1,100;1,200;1,400;1,500;1,600&display=swap" rel="stylesheet">

    <style>
        :root {
            --my-primary-color: #7D5BB8;
        }

        * {
            font-family: 'Barlow', sans-serif;
        }

        .my-border {
            border: 2px solid var(--my-primary-color);
        }

        .my-search-input {
            margin-left: 20px;
            border-radius: 0%;
            border-left: 1px solid #e5e5e5 !important;
            border-top: 1px solid transparent !important;
            border-right: 1px solid transparent !important;
            border-bottom: 1px solid transparent !important;
        }

        .my-search-input:focus,
        .cat-select:focus {
            outline: none !important;
            box-shadow: none !important;
        }


        .my-search-btn {
            border: none;
            background-color: transparent;
            transition-duration: 0.3s;
        }

        .my-search-btn:hover {
            background-color: var(--my-primary-color);
            color: white;
        }

        .icon-wrapper {
            overflow: hidden;
            width: 40px;
            height: 40px;
        }

        .dropdown-menu {
            display: none;
            transition-duration: 5s !important;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }


        .cat-select {
            font-size: 0px;
            transition-duration: 0.5s;
        }

        .cat-select:hover,
        body:has(.my-search-div:hover) .cat-select,
        body:has(.my-search-input:hover) .cat-select,
        body:has(.my-search-btn:hover) .cat-select {
            font-size: 16px;
        }
    </style>

</head>

<body>
    <header class="my-0">

        <div class="d-flex justify-content-between align-items-center py-4 mx-5">

            <div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/images/logo6.jpg" style="width:130px;height:50px;" alt=""></a>
            </div>



            <div class="my-search-div d-flex w-50 my-border rounded-2 align-items-center h-100">
                <form class="d-flex w-100" role="search">
                    <div class="d-flex w-100 py-1 ">
                        <select class="cat-select border border-0 ms-3 px-1 text-truncate" style="max-width: 20%;">
                            <option value="1">category1</option>
                            <option value="2">category2</option>
                            <option value="2">category2</option>
                            <option value="3">category3</option>
                            <option value="4">category4</option>
                            <option value="5">category5category5category5</option>
                        </select>


                        <input class="form-control my-search-input" type="search" placeholder="Enter keywords to search..." aria-label="Search">

                    </div>
                    <button class="my-search-btn px-3" type="submit"><i class="bi bi-search fs-4"></i></button>
                </form>
            </div>




            <div class="position-relative border border-dark-subtle rounded-4">
                <div class="position-absolute top-50 start-0 translate-middle icon-wrapper border border-dark-subtle rounded-circle d-flex justify-content-center align-items-center bg-white">
                    <i class="bi bi-person fs-4 mx-auto"></i>
                </div>

                <div class=" py-2 px-4">
                    <p class="my-0">Hello Guest</p>



                    @if (User!.Identity!.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <p class="my-0 dropdown-toggle">My Account</p>
                            <ul class="dropdown-menu py-2 px-2">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a>
                                </li>
                                <li><a class="dropdown-item" href="#">My Wish List</a></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="dropdown">
                            <p class="my-0 dropdown-toggle">My Account</p>
                            <ul class="dropdown-menu py-2 px-2">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                            </ul>
                        </div>
                    }


                </div>
            </div>


            <div class="position-relative border border-dark-subtle rounded-4">
                <div class="position-absolute top-50 start-0 translate-middle icon-wrapper border border-dark-subtle rounded-circle d-flex justify-content-center align-items-center bg-white">
                    <i class="bi bi-cart2 fs-4 mx-auto"></i>
                </div>

                <div class=" py-2 px-4">
                    <p class="my-0">Hello Guest</p>
                    <p class="my-0">hek</p>
                </div>
            </div>


        </div>



        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: #7D5BB8;">
            <div class="container-fluid d-flex justify-content-between">


                <div class="w-25">
                    <div class="dropdown w-25">
                        <p class="my-0 dropdown-toggle text-light">
                            <i class="bi bi-layout-text-sidebar me-1"></i>Shop by Categories
                        </p>
                        <ul class="dropdown-menu py-2 px-2">
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a>
                            </li>
                            <li><a class="dropdown-item" href="#">My Wish List</a></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="d-flex justify-content-between w-50">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item d-flex">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>

                <div class="w-25">

                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

